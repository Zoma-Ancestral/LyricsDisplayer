<Window x:Class="LyricsDisplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LyricsDisplayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="52" Click="SearchButton_Click"/>
        <TextBox x:Name="SearchText" HorizontalAlignment="Left" Height="44" Margin="82,20,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="124"/>
        <Label x:Name="LyricsLabel" Content="Label" HorizontalAlignment="Left" Height="343" Margin="279,30,0,0" VerticalAlignment="Top" Width="402" ScrollViewer.CanContentScroll="True"/>

    </Grid>
</Window>
